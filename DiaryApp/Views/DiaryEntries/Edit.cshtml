@model DiaryEntry;

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-primary bg-gradient text-white fw-bold">
                    Edit Diary Entry
                </div>
                <div class="card-body">
                    <form method="post" asp-action="Edit">                 
                        <div class="form-group mb-3">
                            <label asp-for="Title" class="form-label text-black-50">Title</label>
                            <input type="text" class="form-control" asp-for="Title" placeholder="Enter Title" />
                            <span asp-validation-for="Title" class="text-danger fw-bold"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Content" class="form-label text-black-50">Content</label>
                            <input type="text"  class="form-control" asp-for="Content" placeholder="Enter Content" />
                            <span asp-validation-for="Content" class="text-danger fw-bold mt-2"></span>

                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="CreatedAt" class="form-label text-black-50">Create</label>
                            <input type="date" class="form-control" asp-for="CreatedAt"/>
                            <span asp-validation-for="CreatedAt" class="text-danger fw-bold mt-2"></span>

                        </div>
                        <div class="d-flex justify-content-between">
                            <input type="submit" class="btn btn-primary" value="EditEntry"/>
                            <a asp-action="Index" asp-controller="DiaryEntries" class="btn btn-danger"> Cancel </a>

                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial"/>
}